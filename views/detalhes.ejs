    <main>
        <div class="main__principal">
            <h1><%= filme.nome.toUpperCase() %></h1>    
            <img src="<%= filme.imagem %>" alt="capa do filme <%= filme.nome %>">               
            
        </div>
        
        <div class="main__secundaria">
            <div class="main__secundaria__h2">
                <h2> <% if (filme.tipo == 'filme'){ %>
                    Filme
                <% } %>
                <% if (filme.tipo == 'serie'){ %>
                    Serie
                <% } %>
            </h2>

            </div>
            
            <div class="main__row">
                <h2>Ano:</h2> <p><%= filme.ano %></p>
            </div>
            <div class="main__row">
                <h2>Genero:</h2> <p><%= filme.genero %></p>
            </div>                
            
            <h2>Sinopse:</h2> <p id="main__sinopse"><%= filme.descricao %></p>

            <div class="main__buttons">
                <div></div>
                <a href="/editar/<%= filme.id %>">Editar</a>
                <a href="/deletar/<%= filme.id %>">Excluir</a>
                <div></div>
                <div></div>
                <div></div>
            </div>

        </div>
