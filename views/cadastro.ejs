    <main>
        <% let _display = ( message ? "display:flex;" : "display:none;" ); %>
        <section id="message" style=<%= _display %> >
            <p><%= message %></p> <span id="close">&times;</span>
        </section>
        <section class="main__cadastro" id="cadastro">
            <h2>CADASTRO DE FILME OU SÉRIE</h2>
            <form  method="post" action="/add">
                <label for="nome">Nome: </label>
                <input type="text" id="nome" name="nome" required="required">

                <label for="tipo">Tipo: </label>
                <select name="tipo" id="tipo" required="required">
                    <option value="1">Filme</option>
                    <option value="2">Série</option>
                </select>
                
                <label for="ano">Ano: </label>
                <input type="number" id="ano" name="ano" min="1900" max="2022" required="required">

                <!-- apenas um (1) genero por filme-->
                <label for="genero">Genero: </label>
                <select name="genero" id="genero" required="required">
                    <option value="drama">Drama</option>
                    <option value="acao">Ação</option>
                    <option value="ficcao">Ficção</option>
                    <option value="aventura">Aventura</option>
                </select>

                <label for="imagem">Link da Imagem: </label>
                <textarea type="url" id="imagem" name="imagem" required="required" name="" id="" cols="30" rows="2"></textarea>

                <label for="descricao">Descrição: </label>                
                <textarea type="text" id="descricao" name="descricao" required="required" name="" id="" cols="30" rows="5"></textarea>
                
                <center>
                    <button id="btnCadastrar" type="submit"><img id="img__cadastrar" src="./img/icons/cadastrar.png" alt="logo__netflix"></button>    
                </center>

            </form>

        </section>
